<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rowIcon"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_info"
        android:contentDescription="@string/info"
        android:layout_margin="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/rowTitle"
        android:layout_alignTop="@+id/rowIcon"
        android:layout_alignBottom="@+id/rowIcon"
        android:layout_alignEnd="@+id/rowDesc"
        android:layout_toEndOf="@+id/rowIcon"
        android:textColor="@color/primary_material_dark" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/rowDesc"
        android:layout_below="@+id/rowTitle"
        android:layout_alignStart="@+id/rowIcon"
        android:layout_alignParentEnd="true"
        android:textColor="@color/primary_material_dark" />
</RelativeLayout>